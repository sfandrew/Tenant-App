<div class="form-group">
  <%= f.label field.id, field.name.humanize, :class => "col-sm-2 control-label" %>
  <div class="col-sm-2 datepicker">
    <%= f.text_field field.id, :class => "form-control", :style => "margin-left:12px;" %>
    <% if defined?(errors) and errors.present? %>
		<small style="color:red"><%= errors.join(', ') %></small>
	<% end %>
  </div>
</div>

