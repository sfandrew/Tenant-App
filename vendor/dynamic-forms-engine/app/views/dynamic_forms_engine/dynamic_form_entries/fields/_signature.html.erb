<div class="form-group">	
	<%= f.label field.id, field.name.humanize, :class => 'col-sm-2 control-label' %>
	<div class="well col-md-10 col-xs-6 col-xs-height col-md-offset-2 jsig">
	  <button class="reset-canvas btn btn-default" onclick="jQuery('#signature_sig').jSignature('clear')" type="button">Reset</button>
	  <!-- <div id="signature"></div> -->
	  
	  <%= sign_form_field_tag(:signature, @dynamic_form_entry.signature || "") %>
	  <strong><em>I certify that all of the information above is to the best of my knowledge and belief true, correct and complete to the best of my knowledge.</em></strong>
	  <% if defined?(errors) and errors.present? %>
		<small style="color:red"><%= errors.join(', ') %></small>
	  <% end %>
	</div>
</div>