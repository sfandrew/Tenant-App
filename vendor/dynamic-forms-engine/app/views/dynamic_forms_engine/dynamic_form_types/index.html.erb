<div class="row">
  <h1 class="col-xs-12 col-sm-6 col-md-8">Form Types</h1>
  <div class="col-xs-6 col-md-4">
    <%= link_to '+ New Form Type', new_dynamic_form_type_path, :class => 'btn btn-success pull-right' %>
  </div>
</div>

<table class="table table-striped table-hover workorders">
  <thead>
    <tr>
      <th>Name</th>
      <!-- th>User</th -->
      <th>Description</th>
      <th width="1%"></th>
      <th width="1%"></th>
      <!-- th width="1%"></th>
      <th width="1%"></th -->
    </tr>
  </thead>

  <tbody>
    <% @dynamic_form_types.each do |dynamic_form_type| %>
      <tr>
        <td><%= dynamic_form_type.name %></td>
        <!-- td><%= dynamic_form_type.user_id %></td -->
        <td><%= dynamic_form_type.description %></td>
        <td><%= link_to "New #{dynamic_form_type.name}", new_form_entry_path(dynamic_form_type), :class => 'btn btn-success' %> </td>
        <td>
          <a href="<%= form_entries_path(dynamic_form_type) %>">
            <button class="btn btn-primary" type="button">
              Show Entries 
              <span class="badge">
                <%= dynamic_form_type.entries.count  %>
              </span>
            </button>
          </a>
        </td>
        <td><%= link_to 'Edit', edit_dynamic_form_type_path(dynamic_form_type), :class => 'btn btn-info' %></td>
        <!--  <td><%= link_to 'Delete', dynamic_form_type, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td> -->
        
      </tr>
    <% end %>
  </tbody>
</table>
<br>