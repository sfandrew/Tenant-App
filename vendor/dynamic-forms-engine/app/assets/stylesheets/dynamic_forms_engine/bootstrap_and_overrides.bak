// following this guide: http://railsapps.github.io/twitter-bootstrap-rails.html
// This separates any bootstrap style changes to this file
@import "bootstrap";

/*for nav bar collapse break point*/
@media (max-width: 990px) {
    .navbar-header {
        float: none;
    }

    .navbar-collapse .nav > li.divider{
   		*width: 100%;
   		height: 1px;
   		margin: 9px 1px;
  		*margin: -5px 0 5px;
   		overflow: hidden;
  		background-color: #e5e5e5;
  		border-bottom: 1px solid #DCDCDC;
  	}
    .navbar-toggle {
        display: block;
    }
    .navbar-collapse {
        border-top: 1px solid transparent;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .navbar-collapse.collapse {
        display: none!important;
    }
    .navbar-nav {
        float: none!important;
        margin: 7.5px -15px;
    }
    .navbar-nav>li {
        float: none;
    }
    .navbar-nav>li>a {
        padding-top: 10px;
        padding-bottom: 10px;
    }
}

body { padding-top: 70px; }

//@import "bootstrap-responsive";



h1, h2, h3, h4, h5, h6{
	font-weight: normal;
	margin-top: 0px;
}
.navbar-collapse, .navbar-default .navbar-form {
	border-color: #e7e7e7;
	font-size: 13px;
}

.navbar-default{
	box-shadow: 0 0 20px #999;
}





fieldset {
	border: 1px solid #c0c0c0;
	margin-bottom: 0.5em;
	padding: 0.625em 0.75em;
	border-radius: 0px;
}

legend {
	padding: 10px;
	font-size: 20px;
	border: none;
	width: initial;
}


.clear{ clear: both; }
.spacer{ height: 30px; }

.logo img{
	width: 300px;
	height: 20px;
	margin-top: 15px;
	margin-right: 2em;
}
#main-header{
	font-family: 'Roboto Slab', serif;
	font-size: 40px;
	margin-bottom: 30px;
}

