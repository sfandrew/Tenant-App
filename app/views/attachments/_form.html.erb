<%= form_for @attachment, :html => {:multipart => true} do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>

      <ul>
      <% @attachment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <label>My fileupload!</label>
  <%= image_tag(@attachment.filename_url,size: "100" ) if @attachment.filename? %>
  <%= f.file_field :filename %>
  <label>
      <%= f.check_box :remove_filename %>
      Remove file
    </label>
  <%= f.hidden_field :filename_cache %>

  <br>


  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
